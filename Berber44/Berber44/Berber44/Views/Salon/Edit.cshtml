@model Berber44.Models.Salon

@{
    ViewData["Title"] = "Edit Salon";
}

<h1>Edit Salon</h1>

<h4>Edit Salon Details</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tur" class="control-label"></label>
                <select asp-for="Tur" class="form-control">
                    <option value="Kuaför">Kuaför</option>
                    <option value="Berber">Berber</option>
                </select>
                <span asp-validation-for="Tur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalismaSaatleri" class="control-label"></label>
                <input asp-for="CalismaSaatleri" class="form-control" />
                <span asp-validation-for="CalismaSaatleri" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

