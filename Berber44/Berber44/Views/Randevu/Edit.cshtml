@model Berber44.Models.Randevu

<h2>Randevu Düzenle</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label>Çalışan</label>
        <select asp-for="CalisanId" asp-items="ViewBag.Calisanlar" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>İşlem</label>
        <select asp-for="IslemId" asp-items="ViewBag.Islemler" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Tarih ve Saat</label>
        <input asp-for="TarihSaat" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <input asp-for="Durum" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
