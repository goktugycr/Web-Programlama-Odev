@model Berber44.Models.Calisan

<h2>Çalışanı Sil</h2>

<h3>Bu çalışanı silmek istediğinize emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>

        <dt class="col-sm-2">Soyad</dt>
        <dd class="col-sm-10">@Model.Soyad</dd>

        <dt class="col-sm-2">Uzmanlık Alanları</dt>
        <dd class="col-sm-10">@Model.UzmanlikAlanlari</dd>

        <dt class="col-sm-2">Salon</dt>
        <dd class="col-sm-10">@Model.Salon?.Ad</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
