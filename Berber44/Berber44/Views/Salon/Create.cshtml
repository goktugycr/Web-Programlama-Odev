@model Berber44.Models.Salon

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<h1>Yeni Salon Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input type="text" class="form-control" id="Ad" name="Ad" required />
    </div>
    <div class="form-group">
        <label for="Tur">Tür</label>
        <select class="form-control" id="Tur" name="Tur" required>
            <option value="Kuaför">Kuaför</option>
            <option value="Berber">Berber</option>
        </select>
    </div>

    <div class="form-group">
        <label for="CalismaSaatleri">Çalışma Saatleri</label>
        <input type="text" class="form-control" id="CalismaSaatleri" name="CalismaSaatleri" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
