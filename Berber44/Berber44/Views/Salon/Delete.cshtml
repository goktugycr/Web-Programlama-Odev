@model Berber44.Models.Salon

@{
    ViewData["Title"] = "Delete Salon";
}

<h1>Delete Salon</h1>

<h3>Are you sure you want to delete this salon?</h3>

<div>
    <h4>Salon Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>

        <dt class="col-sm-2">Tur</dt>
        <dd class="col-sm-10">@Model.Tur</dd>

        <dt class="col-sm-2">Calisma Saatleri</dt>
        <dd class="col-sm-10">@Model.CalismaSaatleri</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

