@model IEnumerable<Berber44.Models.Salon>
<div class="mt-5 text-center">
    <a href="@Url.Action("Index", "Calisan")" class="btn btn-sm btn-secondary mx-2">Çalışan Yönetimi</a>
    <a href="@Url.Action("Index", "Islem")" class="btn btn-sm btn-info mx-2 text-white">İşlem Yönetimi</a>
    <a href="@Url.Action("Index", "Randevu")" class="btn btn-sm btn-success mx-2">Randevu Yönetimi</a>
    <a href="@Url.Action("UserList", "Admin")" class="btn btn-sm btn-warning mx-2">Kullanıcı Yönetimi</a>
    <a href="@Url.Action("RandevuYonetimi", "Admin")" class="btn btn-sm btn-warning mx-2">Randevu Api Yönetimi</a>

</div>
@{
    ViewData["Title"] = "Salonlar";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Salonlar</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Salon Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Tür</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@item.Tur</td>
                <td>@item.CalismaSaatleri</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Görüntüle</a>
                </td>
            </tr>
        }
    </tbody>
  

</table>
