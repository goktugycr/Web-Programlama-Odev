<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Berber44</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Tarayıcı önbelleğini devre dışı bırak -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Berber44</a>

            <div class="d-flex">
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" asp-action="Logout" asp-controller="Account" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">Çıkış Yap</button>
                    </form>
                }
                else
                {
                    <!-- Kullanıcı giriş yapmadıysa -->
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary me-2">Giriş Yap</a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-success">Kayıt Ol</a>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="text-center mt-5">
        <p>&copy; @DateTime.Now.Year - Berber44</p>
    </footer>

    <!-- Scripts Section -->
    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        $(window).on("pageshow", function (event) {
            if (event.originalEvent.persisted) {
                location.reload();
            }
        });
    </script>

</body>
</html>
