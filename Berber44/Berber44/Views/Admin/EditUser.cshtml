@model Berber44.Models.User

<div class="container mt-5">
    <h1 class="mb-4">Kullanıcı Düzenle</h1>
    <form method="post" action="@Url.Action("EditUser", "Admin")">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required />
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Rol</label>
            <input type="text" class="form-control" id="role" name="Role" value="@Model.Role" required />
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="@Url.Action("UserList", "Admin")" class="btn btn-secondary">Geri</a>
    </form>
</div>
