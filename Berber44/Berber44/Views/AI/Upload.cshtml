@{
    ViewData["Title"] = "Fotoğraf Yükle";
}

<div class="container mt-5">
    <h2 class="text-center">Berber44 - Fotoğraf Yükleme</h2>

    @* Hata Mesajı *@
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; border-color: #f5c6cb;">
            <h4>Hata:</h4>
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }

    @* Öneri Mesajı *@
    @if (!string.IsNullOrEmpty(ViewBag.Result) && string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-info" style="background-color: #d1ecf1; color: #0c5460; border-color: #bee5eb;">
            <h4>Öneri:</h4>
            <p>@ViewBag.Result</p>
        </div>
    }

    @* Fotoğraf Yükleme Formu *@
    <form method="post" enctype="multipart/form-data" asp-action="UploadPhoto" asp-controller="AI">
        <div class="mb-3">
            <label for="photo" class="form-label">Fotoğraf Yükleyin</label>
            <input type="file" name="photo" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Fotoğrafı Gönder</button>
    </form>
</div>
