@model Berber44.Models.Islem

<h1>İşlem Düzenle</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sure" class="control-label">Süre (Dakika)</label>
        <input asp-for="Sure" class="form-control" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ucret" class="control-label">Ücret</label>
        <input asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    @* Eğer salon ilişkisi varsa dropdown için *@
    @if (ViewBag.Salonlar != null)
    {
        <div class="form-group">
            <label asp-for="SalonId" class="control-label">Salon</label>
            <select asp-for="SalonId" class="form-control" asp-items="ViewBag.Salonlar">
                <option value="">Salon Seç</option>
            </select>
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>
    }
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
